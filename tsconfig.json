{
  "compilerOptions": {
    /* Base */
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",

    /* Bundling */
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": "./app/packs",
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@root/*": ["*"],
      "@application/*": ["application/*"]
    }
  }
}
