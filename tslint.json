{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "app/webpack/app_schema.tsx"
    ]
  },
  "rules": {
    "jsx-no-lambda": false,
    "jsx-boolean-value": ["never"],
    "no-namespace": [true, "allow-declarations"],
    "max-classes-per-file": [true, "exclude-class-expressions"],
    "prettier": true
  }
}
