{
  "name": "ksylvest",
  "env": {
    "NODE_ENV": {
      "value": "PRODUCTION"
    },
    "RACK_ENV": {
      "value": "PRODUCTION",
    },
    "RAILS_ENV": {
      "value": "PRODUCTION",
    },
    "RAILS_LOG_TO_STDOUT": {
      "value": "enabled",
    }
    "RAILS_MASTER_KEY": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql",
    { "plan": "heroku-redis", "as": "CACHE" }
  ],
  "buildpacks": [
    {
      "url": "heroku-community/apt"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "scripts": {
    "postdeploy": "DISABLE_DATABASE_ENVIRONMENT_CHECK=yes bundle exec rake db:schema:load db:seed"
  }
}
