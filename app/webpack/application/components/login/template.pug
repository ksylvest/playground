form(v-on:submit.prevent="submit" noform.validate)
  p.help.is-danger(v-if="form.errors.has('base')") {{ form.errors.get('base') | sentence }}
  .field
    label.label Email
    p.control.has-icons-left.has-icons-right
      input.input(name="login[email]" type="email" placeholder="Email" 
        v-model="form.email" 
        v-bind:class="{ 'is-success': form.valid('email'), 'is-danger': form.invalid('email') }")
      span.icon.is-small.is-left
        i.fa.fa-envelope
      span.icon.is-small.is-right
        i.fa.fa-check(v-if="form.valid('email')")
        i.fa.fa-warning(v-if="form.invalid('email')")
    p.help.is-danger(v-if="form.errors.has('email')") {{ form.errors.get('email') | sentence }}
  .field
    label.label Password
    p.control.has-icons-left.has-icons-right
      input.input(name="login[password]" type="password" placeholder="Password" 
        v-model="form.password" 
        v-bind:class="{ 'is-success': form.valid('password'), 'is-danger': form.invalid('password') }")
      span.icon.is-small.is-left
        i.fa.fa-lock
      span.icon.is-small.is-right
        i.fa.fa-check(v-if="form.valid('password')")
        i.fa.fa-warning(v-if="form.invalid('password')")
    p.help.is-danger(v-if="form.errors.has('password')") {{ form.errors.get('password') | sentence }}
  .field
    .control
      button.button.is-primary Login
